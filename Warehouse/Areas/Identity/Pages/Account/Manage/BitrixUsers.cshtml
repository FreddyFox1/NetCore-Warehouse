@page
@model Warehouse.Pages.Admin.BitrixUsersModel

@{
    ViewData["Title"] = "Список пользователей Bitrix24";
}

<h1>Список пользователей Bitrix24</h1>

<p>
    <a asp-controller="" asp-action="UpdateList">Обновить список</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BitrixUser[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BitrixUser[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BitrixUser[0].isSigned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BitrixUser)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isSigned)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.UserID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.UserID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.UserID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
