@page
@model Warehouse.Pages.admin.telegramModel

@{
    ViewData["Title"] = "Запросы из Telegram";
}

<h1>Telegram</h1>
<p>Уведомления для Telegram клиентов</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TelegramEntities[0].ChatID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelegramEntities[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelegramEntities[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelegramEntities[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelegramEntities[0]._sendUpdates)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TelegramEntities) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChatID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._sendUpdates)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
