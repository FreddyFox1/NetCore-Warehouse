@page "/Registration"
@model RegisterModel
@{
    ViewData["Title"] = "Создание нового пользователя";
}


<div class="row">
    <div class="col-md-5">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Создание нового аккаунта</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Роль доступа:</label>
                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="SelectedRole" asp-items="Model.Staff">
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Права пользователей</h4>
            <hr />
            <div class="text-muted">
                <p>
                    <b>Admin:</b> Имеет доступ ко всем страницам и ресурсам приложения;
                </p>
                <p>
                    <b>User:</b> Имеет доступ ко всем страницам, может добавлять, удалять и редактировать записи. Не может управлять добавлением пользователей в систему.
                </p>
                <p>
                    <b>Watcher:</b> Имеет доступ только к странице со списком матриц и журналу событий, возможность добавления,редактирования и уд отключена;
                </p>
                <p>
                    <b>Driver:</b> Имеет доступ к странице со списком матриц, журналу событий, перемещение матриц. Возможность удаления, редактирования данных матрицы (кроме изменения ячейки) отключены.
                </p>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
