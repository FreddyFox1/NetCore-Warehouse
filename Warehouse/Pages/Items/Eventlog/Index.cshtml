@page
@model Warehouse.Pages.Items.Eventlog.IndexModel
@{
    ViewData["Title"] = "Журнал событий";
}

<h1 class="pb-1 text-center text-muted">Журнал событий</h1>
<hr />
<div class="container row p-0 m-0">
    <div class="text-center">
        <table id="DTItemsLog" class="table table-striped table-bordered text-center" style="width:100%">
            <thead class="bg-telegram text-white justify-content-center align-items-center">
                <tr>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogItemName)
                    </th>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogItemArticle)
                    </th>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogUserName)
                    </th>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogOldStorage)
                    </th>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogCurStorage)
                    </th>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogDateTransfer)
                    </th>
                    <th hidden></th>
                </tr>
            </thead>
        </table>
    </div>

    <div class="d-flex pb-3">
        <a asp-page="Statistics" class="btn btn-primary form-control text-white align-self-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-graph-up" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5z"></path>
            </svg>
            Статистика
        </a>
    </div>
</div>

@section scripts{
    <script src="~/js/ItemLogs.js"></script>
}
