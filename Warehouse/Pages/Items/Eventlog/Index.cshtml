@page
@model Warehouse.Pages.Items.Eventlog.IndexModel
@{
    ViewData["Title"] = "Журнал событий";
}

<h1 class="pb-3">Журнал событий</h1>
<div class="container row p-0 m-0">
    <div class="text-center">
        <table id="DTItemsLog" class="table table-striped table-bordered text-center" style="width:100%">
            <thead class="thead-dark justify-content-center align-items-center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogItemName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogItemArticle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogUserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogOldStorage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogCurStorage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogsItems[0].LogDateTransfer)
                    </th>
                    <th hidden></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/js/ItemLogs.js"></script>
}
