@page
@model Warehouse.Pages.Items.Groups.IndexModel

@{
    ViewData["Title"] = "Список категорий";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="col-6">
    <h1 class="pb-1 text-center">Список категорий</h1>
    <hr>
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr align="center">
                <th>
                    @Html.DisplayNameFor(model => model.ItemCategory[0].CategoryName)
                </th>
                <th>Действие</th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model.ItemCategory)
            {
                <tr align="center">
                    <td align="left">
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.CategoryID">Редактировать</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr>
    <a class="mt-3 btn btn-success" asp-page="Create">Добавить категорию</a>
</div>