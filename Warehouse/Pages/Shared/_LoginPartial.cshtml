@using Microsoft.AspNetCore.Identity
@using Warehouse.Model

@inject SignInManager<WarehouseUser> SignInManager
@inject UserManager<WarehouseUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="TrackIcon">
                <div class="score">0</div>
                <img src="~/icons/truck_50px.png" width="40" height="40"/>
            </div>

        </li>

        <li class="nav-item d-inline-flex align-self-center">
            <div class="rounded-circle user-icon"></div>
        </li>
        <li class="nav-item d-inline-flex align-self-center">
            <a id="manage" class="nav-link text-muted" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item d-inline-flex align-self-center">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white but-exit p-1 m-0">Выход</button>
            </form>
        </li>
    }
</ul>
