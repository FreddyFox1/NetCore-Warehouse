@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Список ролей";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    int rowCounter = 1;
}
<h2>Список ролей</h2>
<hr />
<div class="col-5">
    <table class="table-sm table-bordered table-striped justify-content-md-center table-hover table-light">
        <tr class="text-center">
            <th scope="row">#</th>
            <th>Роль</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@rowCounter</td>
                <td>@role.Name</td>
            </tr>
            rowCounter++;
        }

    </table>
</div>

<a asp-action="Create" asp-controller="Roles">Добавить роль</a>
<a asp-page="/Admin" asp-area="Identity">Список пользователей</a>
